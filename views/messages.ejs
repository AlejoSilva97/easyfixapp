                        <a class="nav-link" id="nav-link" href="<%='/logout'%>">Cerrar Sesion</a>
                    </li>
                </ul>
            </div>
        </nav>
        <% if(locals.error) {%>
            <div class="container" id="container">
                <br>
                <hr>
                <br>
                <div class="row rounded" id="row1">
                    <h4 class="mx-auto mt-sm-3"><%= error %></h4>
                </div>         
            </div>
            <% } else {%>
                <div class="container" id="container">
                    
                    <% for(var i=0; i<chats.length; i++) { %>
                        <% if(chats.length == 1) {%>
                            <% if(user.idUsuario != chats[i].idUsuarioUno) {%>
                            <br>
                            <hr>
                            <br>
                            <div class="row rounded" id="row1">
                                <div class="col-1">
                                    <img class="mt-sm-2 ml-sm-2" src="/images/<%= chats[i].fotootro %>" alt="Foto" id="fotochats">
                                </div>
                                <div class="col-9">
                                    <a id="titulo" href="<%='/profile/'%><%= chats[i].idUsuariootro %>"><h6 class="mt-sm-4 ml-sm-3"><%= chats[i].nombreotro %> <%= chats[i].apellidootro %></h6></a>
                                </div>
                                <div class="col-2">
                                    <a class="btn btn-info mt-sm-3" href="<%='/currentchat/'%><%= user.idUsuario %>/<%= chats[i].idUsuariootro %>#formulario">Abrir chat</a>
                                </div>
                            </div>
                            <% } else {%>
                                <br>
                            <hr>
                            <br>
                            <div class="row rounded" id="row1">
                                <div class="col-1">
                                    <img class="mt-sm-2 ml-sm-2" src="/images/<%= chats[i].foto %>" alt="Foto" id="fotochats">
                                </div>
                                <div class="col-9">
                                    <a id="titulo" href="<%='/profile/'%><%= chats[i].idUsuario %>"><h6 class="mt-sm-4 ml-sm-3"><%= chats[i].nombre %> <%= chats[i].apellido %></h6></a>
                                </div>
                                <div class="col-2">
                                    <a class="btn btn-info mt-sm-3" href="<%='/currentchat/'%><%= user.idUsuario %>/<%= chats[i].idUsuario %>#formulario">Abrir chat</a>
                                </div>
                            </div>
                                <% } %>
                                <% } %>
                                <% if(user.idUsuario == chats[i].idUsuarioUno) {%>
                                    <br>
                                    <hr>
                                    <br>
                                    <div class="row rounded" id="row1">
                                        <div class="col-1">
                                            <img class="mt-sm-2 ml-sm-2" src="/images/<%= chats[i].foto %>" alt="Foto" id="fotochats">
                                        </div>
                                        <div class="col-9">
                                            <a id="titulo" href="<%='/profile/'%><%= chats[i].idUsuario %>"><h6 class="mt-sm-4 ml-sm-3"><%= chats[i].nombre %> <%= chats[i].apellido %></h6></a>
                                        </div>
                                        <div class="col-2">
                                            <a class="btn btn-info mt-sm-3" href="<%='/currentchat/'%><%= user.idUsuario %>/<%= chats[i].idUsuario %>#formulario">Abrir chat</a>
                                        </div>
                                    </div>
                                    <% }%>
                                    <% } %>
                                    
                                </div>
                                <% } %>
                                <footer class="footer mt-sm-5 text-center" id="footer">
                                    <h4 class="align-middle my-auto" id="footertext">&copy; Sitio hecho por ASK | <a class="my-auto" id="footertext" href="https://www.facebook.com/pg/Easy-Fix-Colombia-105766757861344/reviews/" target="_blank">Visitanos en facebook</a></h4>
                                </footer>
                                
                                <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
                                <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
                                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
                                <style>
                                    #body{
                                        background: url(/images/fondo/fondo.jpg);
                                    }
                                    #titulo{
                                        color: black;
                                    }
                                    #row{
                                        background-color:rgba(207, 205, 205, 0.74); 
                                        min-height: 380px;
                                        max-height: auto;
                                    }
                                    #row1{
                                        background-color:rgba(207, 205, 205, 0.74);
                                        min-height: 80px;
